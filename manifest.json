{
  "manifest_version": 2,

  "name": "Gtabs",
  "description": "Adds email tabs to Gmail.",
  "version": "1.0",

  "content_scripts": [
  {
    "matches": ["https://mail.google.com/mail/*"],
    "css": ["css/background.css", "materialize_v0.82/css/materialize.css"],
    "js": ["js/content_script.js", "js/jquery-2.1.1.min.js", "materialize_v0.82/js/materialize.min.js"]
  }
  ],

  "background": {
    "page": "background.html",
    "persistent": false
  },

  "permissions": [
    "activeTab", "tabs", "storage"
  ],

  "web_accessible_resources": [
    "img/*.png"
  ]
}